<!DOCTYPE html>
<html manifest="/manifest-appcache">
    <head>
        <base href="/"/>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body data-ng-app="appModule">
        <div class="navbar navbar-static-top" data-ng-controller="menuViewModel">
            <div class="navbar-inner">
                <div class="container">
                    @*<a class="brand" href="#">SPA board - steaming Scrum</a>*@
                    <ul class="nav">
                        <li><a href="/scrumboard">Board</a></li>
                        <li><a href="/story/new">Create Story</a></li>
                    </ul>
                    <p class="navbar-text text-right">Users online:{{OnlineUsers}}</p>
                </div>
            </div>
        </div>
        <div class="container">
            @this.RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/signalR")
        <script src="~/signalr/hubs"></script>
        @Scripts.Render("~/bundles/3rdParty")
        @Scripts.Render("~/bundles/angularJs")
        @Scripts.Render("~/bundles/app")
        @this.RenderSection("scripts", required: false)
    </body>
</html>
